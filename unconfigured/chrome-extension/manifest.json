{
    "name": "%%PROJECT_NAME%%",
    "version": "%%VERSION%%",
    "manifest_version": 2,
    "icons": {
        "16": "css/img/crowdlogger-logo.001.16x16.png",
        "48": "css/img/crowdlogger-logo.001.48x48.png",
        "128": "css/img/crowdlogger-logo.001.128x128.png"
    },
    "description": "%%DESCRIPTION%% %%LICENSE%%",
    "browser_action": {
        "default_icon": "css/img/pauseLogging.png",
        "default_popup": "html/chrome_menu.html",
        "default_title": "%%PROJECT_NAME%%"
    },
    "update_url": "%%SERVER_BASE_URL%%/updates/chrome/update.xml",
    "options_page": "html/preferences.html",
    "background": {
        "page": "html/chrome_main.html"
    },
    "permissions": [
        "notifications",
        "unlimitedStorage",
        "tabs",
        "<all_urls>"
    ],
    "sandbox": {
        "pages": ["html/clrm.html"]
    }
}
